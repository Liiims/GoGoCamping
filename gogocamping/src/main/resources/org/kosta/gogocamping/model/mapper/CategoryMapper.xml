<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.kosta.gogocamping.model.mapper.CategoryMapper">
<resultMap type="CategoryVO" id="categoryMap">
	<id property="categoryNo" column="category_no"/>
	<result property="categoryName" column="category_name"/>
	<result property="detailCategoryName" column="detail_category_name"/>
</resultMap>
<select id="getCateroryList" resultMap="categoryMap">
	select * from category
</select>
<resultMap type="ProductVO" id="productMap">
	<id property="productId" column="product_id"/>
	<result property="productName" column="product_name"/>
	<result property="productImg" column="product_img"/>
	<result property="price" column="price"/>
</resultMap>
<select id="getCategoryProductList" parameterType="String" resultMap="productMap">
	select product_name,product_img,price
	from product p, category c
	where p.category_no=c.category_no
	and c.category_name=${value}
</select>
<select id="getDetailCategory" parameterType="String" resultMap="categoryMap">
	select *
	from category
	where category_name=${value}
</select>
<select id="getDetailCateroryProductList" parameterType="Map" resultMap="productMap">
	select product_name,product_img,price
	from product p, category c
	where p.category_no=c.category_no
	and c.category_name=${categoryName}
	and c.detail_category_name=${detailCategoryName}
</select>
</mapper>